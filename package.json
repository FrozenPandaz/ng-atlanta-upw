{
  "name": "ng-atlanta-upw",
  "version": "0.0.0",
  "license": "MIT",
  "main": "./server-exec/firebase.js",
  "scripts": {
    "ng": "ng",
    "start": "npm run build && npm run server",
    "predeploy": "npm run build:prod",
    "deploy": "firebase deploy",
    "build": "concurrently 'npm run build:client' 'npm run build:server:ng' 'npm run build:server:ts' -n client,server:ng,server:ts",
    "build:prod": "concurrently 'npm run build:client:prod' 'npm run build:server:ng' 'npm run build:server:fb' -n client,server:ng,server:ts",
    "build:client": "ng build",
    "build:client:prod": "ng build --prod --build-optimizer --vendor-chunk --sourcemaps --deployUrl https://ng-atlanta-upw.firebaseapp.com/",
    "postbuild:client:prod": "ngsw-config dist src/ngsw-config.json",
    "build:server:ng": "ng build --app server --aot",
    "build:server:fb": "tsc --project src/tsconfig.firebase.json",
    "build:server:ts": "tsc --project src/tsconfig.server-exec.json",
    "build:server": "npm run build:server:ng && npm run build:server:ts",
    "watch:server:ng": "npm run build:server:ng -- --watch",
    "watch:server:ts": "npm run build:server:ts -- -w",
    "watch:client": "ng build --aot --watch",
    "watch": "concurrently 'npm run watch:client' 'npm run watch:server:ng' 'npm run watch:server:ts' -n client,server:ng,server:ts",
    "server": "nodemon server-exec/server.js",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/platform-server": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@angular/service-worker": "^5.2.0",
    "@nguniversal/express-engine": "^5.0.0-beta.5",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "angularfire2": "^5.0.0-rc.5-next",
    "cookie": "^0.3.1",
    "core-js": "^2.5.3",
    "express": "^4.16.2",
    "express-winston": "^2.4.0",
    "firebase": "4.8.0",
    "firebase-admin": "^5.7.0",
    "firebase-functions": "^0.8.0",
    "js-cookie": "^2.2.0",
    "rxjs": "^5.5.6",
    "winston": "^2.4.0",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "^1.6.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/cookie": "^0.3.1",
    "@types/express": "^4.11.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/js-cookie": "^2.1.0",
    "@types/node": "^8.5.8",
    "codelyzer": "^4.0.1",
    "concurrently": "^3.5.1",
    "firebase-tools": "^3.16.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.3",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.14.9",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "~2.5.3"
  }
}
